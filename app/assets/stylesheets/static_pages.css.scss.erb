#footer_links.controller-static_pages {
	width: 900px;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	display: table;
}

#footer_links.controller-static_pages a {
	text-decoration: none;
	background: white;
	display: table-cell;
	width: 300px;
}

#footer_links.controller-static_pages a:hover {
	color: black;
	text-decoration: underline;
}

hr {
	width: 900px;
	margin-left: auto;
	margin-right: auto;
}


#people {
	border-radius: 150px;
	-webkit-border-radius: 150px;
	-moz-border-radius: 150px;
}

td {
	padding: 15px;
}
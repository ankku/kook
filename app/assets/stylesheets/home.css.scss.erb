#top {
	z-index: -10;
	max-width: 100%;
	width: auto\9; /* ie8 */
	height: 650px;
	background-image: image_url('front_image.jpg');
	background-repeat: no-repeat center fixed;
	background-size: cover;
}

#on_image {
	float: right;
	margin-top: -450px;
	color: white;
}

#how_to {
	margin-top: 40px;
	columns: 100px 3;
	-webkit-columns: 100px 3; /* Safari and Chrome */
	-moz-columns: 100px 3; /* Firefox */
	text-align: center;
	width: 900px;
}

#footer_links.controller-home {
	width: 900px;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 40px;
	text-align: center;
	display: table;
}

#footer_links.controller-home a {
	text-decoration: none;
	background: white;
	display: table-cell;
	width: 300px;
}

#footer_links.controller-home a:hover {
	color: black;
	text-decoration: underline;
}

#event-link {
	color: black;
	text-decoration: none;
}

#event-link:hover {
	color: black;
}
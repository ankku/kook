#header {
	background: #333333;
	position: absolute;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 50px;
	padding-top: 10px;
}

#header_image {
	width: 900px;
	margin-left: auto;
	margin-right: auto;
}

#front_image {
	position: absolute;
	top: 50px;
	left: 0px;
	max-width: 500px;
	height: auto;
}

body {
	padding-top: 60px;
	margin: 0px;
}

#content {
	width: 900px;
	margin-left: auto;
	margin-right: auto;
}


#events {
	
}

#list-event {
	columns: 70px 5;
	-webkit-columns: 70px 5; /* Safari and Chrome */
	-moz-columns: 70px 5; /* Firefox */
	border: 1px solid;
	margin-bottom: 5px;
	padding: 4px;
}

#list-event:nth-child(even) {
	background: #E6E6E6;
}

<div class="depot_form">

  <%= form_for(@user, :html => {:target => "_top"}) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <legend>Enter account information</legend>
      <table>
        <tr>
          <td id="label"><%= f.label :name, 'Name:' %></td>
          <td><%= f.text_field :name, size: 40 %></td>
        </tr>
        <tr>
          <td id="label"><%= f.label :password, 'Password:' %></td>
          <td><%= f.password_field :password, size: 40 %></td>
        </tr>
        <tr>
          <td id="label"><%= f.label :password_confirmation, 'Confirm:' %></td>
          <td><%= f.password_field :password_confirmation, size: 40 %></td>
        </tr>
        <tr><td></td>
          <td id="submit"><%= f.submit %></td>
        </tr>
      </table>

    </fieldset>
  <% end %>
</div
